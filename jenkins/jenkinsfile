pipeline {
    agent any

    stages {
        stage('gradle-check') {
            steps {
                sh "chmod +x ${env.WORKSPACE}/search/jenkins/gradle-check.sh"
                sh('./search/jenkins/gradle-check.sh')
            }
            
        }
    }

    post {
        failure {
            sh "chmod +x ${env.WORKSPACE}/search/jenkins/post-build-task1.sh"
            sh('./search/jenkins/post-build-task1.sh')
        }
        // failure {
        //     sh "chmod +x ${env.WORKSPACE}/search/jenkins/post-build-task1.sh"
        //     sh('./search/jenkins/post-build-task2.sh')
        // }
    }
}
